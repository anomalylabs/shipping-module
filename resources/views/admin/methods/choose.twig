<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_method') }}</h4>
</div>

<div class="modal-body">

    {% include "streams::modals/filter" %}

    <ul class="nav nav-pills nav-stacked">
        {% for method in methods %}
            <li class="nav-item">
                <a href="{{ url_to('admin/shipping/methods/' ~ request_route().parameter('zone') ~ '/create?method=' ~ method.namespace) }}"
                   class="nav-link">
                    <strong>{{ trans(method.getTitle()) }}</strong>
                    <br>
                    <small>{{ trans(method.getDescription()) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
