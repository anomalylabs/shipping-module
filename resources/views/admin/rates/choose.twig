<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_carrier') }}</h4>
</div>

<div class="modal-body">

    <ul class="nav nav-pills nav-stacked">
        {% for carrier in carriers %}
            <li class="nav-item">
                <a href="{{ url_to('admin/shipping/create?carrier=' ~ carrier.namespace) }}"
                   class="nav-link">
                    <strong>{{ trans(carrier.getTitle()) }}</strong>
                    <br>
                    <small>{{ trans(carrier.getDescription()) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
